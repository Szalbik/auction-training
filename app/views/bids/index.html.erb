<p id="notice"><%= notice %></p>

<h1>Bids</h1>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th>Account</th>
      <th>User auction</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bids.each do |bid| %>
      <tr>
        <td><%= bid.amount %></td>
        <td><%= bid.account_id %></td>
        <td><%= bid.user_auction_id %></td>
        <td><%= link_to 'Show', [@auction, bid] %></td>
        <td><%= link_to 'Edit', edit_user_auction_bid_path(@auction, bid) %></td>
        <td><%= link_to 'Destroy', [@auction, bid], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bid', new_user_auction_bid_path(@auction) %>

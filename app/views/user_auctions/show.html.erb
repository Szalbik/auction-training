<p id="notice"><%= notice %></p>

<p>
  <strong>Finished at:</strong>
  <%= @user_auction.finished_at %>
</p>

<p>
  <strong>Name:</strong>
  <%= @user_auction.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @user_auction.description %>
</p>

<p>
  <strong>Minimal price:</strong>
  <%= @user_auction.minimal_price %>
</p>

<p>
  <strong>Account:</strong>
  <%= @user_auction.account_id %>
</p>

<%= link_to 'New Bid', new_user_auction_bid_path(@user_auction) %> |
<%= link_to 'Edit', edit_user_auction_path(@user_auction) %> |
<%= link_to 'Back', user_auctions_path %>

<% unless @user_auction.bids.empty? %>
  <table>
    <thead>
      <tr>
        <th>Amount</th>
        <th>Account</th>
        <th>User auction</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @user_auction.bids.each do |bid| %>
        <tr>
          <td><%= bid.amount %></td>
          <td><%= bid.account_id %></td>
          <td><%= bid.user_auction_id %></td>
          <td><%= link_to 'Show', [@user_auction, bid] %></td>
          <td><%= link_to 'Edit', edit_user_auction_bid_path(@user_auction, bid) %></td>
          <td><%= link_to 'Destroy', [@user_auction, bid], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

